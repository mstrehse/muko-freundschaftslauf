<h2 class="text-2xl mb-6">Ergebnis bearbeiten</h2>


<form method="post" action="{{ route('result.update', {result: result}) }}">
    {{ csrf_field() }}

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/select" with {name: "name", default: result.name, label: trans("Läufer"), options: runners} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "km", default: result.km, label: trans("Distanz in km (mit Punkt getrennt)")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        <button>
            {% include "component/button/button" with {text: "Änderungen speichern", cta: true} %}
        </button>
    </div>
</form>
