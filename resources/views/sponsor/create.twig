<h2 class="text-2xl mb-6">Sponsor hinzufügen</h2>

<form method="post" action="{{ route('sponsor.create', {team: team}) }}">
    {{ csrf_field() }}

    <input type="hidden" name="team_id" value="{{team.id}}" />

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "name", label: trans("Name des Sponsors")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "contact", label: trans("Ansprechpartner")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "street", label: trans("Straße Nr.")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "city", label: trans("PLZ Ort")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "email", label: trans("E-Mail Adresse")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "phone", label: trans("Telefonnummer")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "amount", label: trans("Spendenbetrag in €")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "infos", label: trans("Weitere Infos")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        <button>
            {% include "component/button/button" with {text: "Sponsor hinzufügen", cta: true} %}
        </button>
    </div>
</form>