<h2 class="text-2xl mb-6">Team Mitglied hinzufügen</h2>

<form method="post" action="{{ route('member.create', {team: team}) }}">
    {{ csrf_field() }}

    <input type="hidden" name="team_id" value="{{team.id}}" />

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/select" with {name: "gender", label: trans("Anrede"), options: {
            'm': 'Herr',
            'w': 'Frau',
            'd': 'Keine'
        }} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "firstname", label: trans("Vorname")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "lastname", label: trans("Nachname")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "yearofbirth", label: trans("Geburtsjahr")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        <button>
            {% include "component/button/button" with {text: "Teammitglied hinzufügen", cta: true} %}
        </button>
    </div>
</form>