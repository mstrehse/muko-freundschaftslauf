{% if cta == true %}
    <span class="inline-block bg-magenta py-2 px-6 text-white rounded font-bold text-p hover:bg-magenta-hover cursor-pointer">{{ text }}</span>
{% elseif danger == true %}
    <span class="inline-block bg-orange py-2 px-6 text-white rounded font-bold text-p hover:bg-orange-hover cursor-pointer">{{ text }}</span>
{% else %}
    <span class="inline-block bg-gray-177 py-2 px-6 text-white rounded font-bold text-p hover:bg-midnight-hover cursor-pointer">{{ text }}</span>
{% endif %}
