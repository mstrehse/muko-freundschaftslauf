<h2 class="text-2xl mb-6">Sponsor bearbeiten</h2>

<form method="post" action="{{ route('sponsor.update', {sponsor: sponsor}) }}">
    {{ csrf_field() }}

    <input type="hidden" name="team_id" value="{{sponsor.team.id}}" />

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "name", default: sponsor.name, label: trans("Name des Sponsors")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "contact", default: sponsor.contact, label: trans("Ansprechpartner")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "street", default: sponsor.street, label: trans("Straße Nr.")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "city", default: sponsor.city, label: trans("PLZ Ort")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "email", default: sponsor.email, label: trans("E-Mail Adresse")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "phone", default: sponsor.phone, label: trans("Telefonnummer")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "amount", default: sponsor.amount, label: trans("Spendenbetrag in €")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        {% include "component/form/input" with {name: "infos", default: sponsor.infos, label: trans("Weitere Infos")} %}
    </div>

    <div class="flex flex-wrap mb-5 relative">
        <button>
            {% include "component/button/button" with {text: "Änderungen speichern", cta: true} %}
        </button>
    </div>
</form>