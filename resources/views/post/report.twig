{% extends "layouts.report" %}

{% block title %}{{ trans('Beitrag melden!') }}{% endblock %}

{% block content %}
    <div class="lg:flex">
        <div class="lg:flex-none lg:w-1/2 lg:pr-12">
            {% include "post/preview" with {post: post, edit: false, report: false} %}
        </div>
        <div class="lg:flex-none lg:w-1/2">
            <h2 class="text-3xl mb-3">Beitrag melden!</h2>
            <p class="mb-6">Sie haben nun die Möglichkeit diesen Beitrag zu melden und eine Löschung zu beantragen.</p>

            <form method="post" action="{{route('post.report', {post: post})}}">

                {{ csrf_field() }}

                <div class="flex flex-wrap mb-5 relative">
                    {% include "component/form/text" with {name: "reason", label: trans("Warum sollte der Beitrag gelöscht werden?")} %}
                </div>

                <div class="flex flex-wrap mb-5 relative">
                    {% include "component/form/input" with {name: "email", label: trans("E-Mail Adresse für Rückfragen")} %}
                </div>

                <div class="flex flex-wrap mb-5 relative">
                    <button>
                        {% include "component/button/button" with {text: "Absenden", cta: true} %}
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}


{% block head %}
    <link rel="stylesheet" type="text/css" href="/slick/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="/slick/slick/slick-theme.css"/>
{% endblock %}

{% block scripts %}
<script src="{{ mix('js/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ mix('js/slick.min.js') }}" type="text/javascript"></script>
<script src="{{ mix('js/init.slick.js') }}" type="text/javascript"></script>
{% endblock %}
